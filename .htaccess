<IfModule mod_rewrite.c>
RewriteCond %{HTTPS} off
RewriteRule (.*) https://master-fatima-fajardo.test/$1 [R=301,L]
</IfModule>
RewriteEngine On
RewriteBase /
# Añade .php a la URL internamente si no tiene extensión
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [L]
# Redirecciona a la URL sin .php si se accede directamente con .php
RewriteCond %{THE_REQUEST} \s/+(.*?/)?(?:index)?(.*?)\.php[\s?]
RewriteRule ^ %1%2 [R=301,L,NE]